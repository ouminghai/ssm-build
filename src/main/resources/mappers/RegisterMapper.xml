<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm.promotion.core.dao.RegisterDao">

    <resultMap type="Register" id="RegisterResult">
        <result property="id" column="id"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
        <result property="repassword" column="password"/>
    </resultMap>

    <!--<resultMap type="User" id="UserResult">
        <result property="id" column="id"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
        <result property="roleName" column="role_name"/>
    </resultMap>-->

    <select id ="register" parameterType="Register">
        insert into ssm_user(user_name,password) values (#{userName},#{password})
    </select>



</mapper>